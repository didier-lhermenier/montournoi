{% extends 'base.html.twig' %}

{% block title %}Accueil montournoi.org{%  endblock %}

{% block body %}
    <main class="container text-center">

        <div class="text-center my-3">
            <a href="/"><img src="{{ asset('build/images/logo.png') }}" alt="logo montournoi" width="106px" title="Retour vers l'accueil"></a>
        </div>

        <div class="row mb-5">
            <div class="col">
                <h1 class="lobster">Choisissez un tournoi&nbsp;Ã  suivre...</h1>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col">
                <form action="/tournoi">
                    <select name="select_tournament" id="st">
                            <option value="">Choisissez un tournoi public...</option>
                        {%  for tournament in tournaments %}
                            <option value="{{ tournament.id }}">{{ tournament.name }}</option>
                        {%  endfor %}
                    </select>
                    <button type="submit" class="btn btn-lg btn-perso5" onclick="if(document.forms.valueOf()) return false;">Suivre ce tournoi</button>
                </form>
            </div>
        </div>

    </main>
{% endblock %}

{% block footer %}
    {%  include('footer.html.twig') %}
{% endblock %}