{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
<div class="container">

<h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>Is_private</th>
                <td>{{ tournament.isPrivate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ tournament.picture }}</td>
            </tr>
            <tr>
                <th>Date_begin</th>
                <td>{{ tournament.dateBegin ? tournament.dateBegin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_end</th>
                <td>{{ tournament.dateEnd ? tournament.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ tournament.location }}</td>
            </tr>
            <tr>
                <th>Max_gamers</th>
                <td>{{ tournament.maxGamers }}</td>
            </tr>
            <tr>
                <th>Is_free</th>
                <td>{{ tournament.isFree ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ tournament.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tournament_index') }}">back to list</a>

    <a href="{{ path('tournament_edit', {'id': tournament.id}) }}">edit</a>

    {{ include('tournament/_delete_form.html.twig') }}
</div>
{% endblock %}
